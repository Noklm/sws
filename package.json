{
	"name": "sws",
	"displayName": "sws",
	"description": "VScode extension for helping SWS developpers",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sws.showConfig",
		"onCommand:sws.build",
		"onCommand:sws.clean",
		"onCommand:sws.flash"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "SWS",
			"properties": {
				"sws.config.target": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"CURIOSITY",
						"IR_3D",
						"IR_PORTE",
						"TRANSMETTEUR_SECOURS"
					],
					"default": "CURIOSITY",
					"description": "The SWS target's project"
				},
				"sws.config.cpu": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"attiny817",
						"avr128da48",
						"atmega644pa"
					],
					"default": "atmega644pa",
					"description": "The CPU core"
				},
				"sws.config.frequency": {
					"type": "integer",
					"scope": "machine-overridable",
					"default": 8000000,
					"description": "The frequency on which the CPU runs"
				}
			}

		},
		"commands": [
			{
				"command": "sws.showConfig",
				"title": "Show configurations"
			},
			{
				"command": "sws.build",
				"title": "Build"
			},
			{
				"command": "sws.clean",
				"title": "Clean"
			},
			{
				"command": "sws.flash",
				"title": "Flash"
			}
		],
		"keybindings": [
			{
				"command": "sws.showConfig",
				"key": "ctrl+alt+d"
			},
			{
				"command": "sws.build",
				"key": "ctrl+alt+b",
				"args": "all"
			},
			{
				"command": "sws.clean",
				"key": "ctrl+alt+c",
				"args":"clean"

			},
			{
				"command": "sws.flash",
				"key": "ctrl+alt+f",
				"args": "flash"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
