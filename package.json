{
	"name": "sws",
	"displayName": "sws",
	"description": "VScode extension to help SWS developpers",
	"version": "0.0.1",
	"publisher": "JDE",
	"repository": {
		"url": "https://github.com/juliendland/sws"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebug",
		"onCommand:sws.showConfig",
		"onCommand:sws.build",
		"onCommand:sws.clean",
		"onCommand:sws.flash",
		"workspaceContains:**/src"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "SWS",
			"properties": {
				"sws.config.TARGET": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"CURIOSITY",
						"IR_3D",
						"IR_PORTE",
						"TRANSMETTEUR_SECOURS"
					],
					"default": "CURIOSITY",
					"description": "The SWS target's project"
				},
				"sws.config.CORE": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"attiny817",
						"avr128da48",
						"atmega644pa"
					],
					"default": "atmega644pa",
					"description": "The CPU core"
				},
				"sws.config.F_CPU": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "8000000",
					"description": "The frequency on which the CPU runs"
				},
				"sws.config.PACK": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"AVR-Dx_DFP",
						"ATtiny_DFP"
					],
					"default": "AVR-Dx_DFP",
					"description": "The pack to use"
				},
				"sws.config.PACK_VERSION": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "1.2.56",
					"description": "The version of the pack to use"
				},
				"sws.config.INTERFACE": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"JTAG",
						"UPDI",
						"SWD"
					],
					"default": "updi",
					"description": "The interface that de tool uses to flash chip"
				},
				"sws.config.TOOL": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"atmelice",
						"avrdragon",
						"edbg",
						"nedbg"
					],
					"default": "atmelice",
					"description": "The tool used to flash the chip"
				}
			}
		},
		"commands": [
			{
				"command": "sws.showConfig",
				"title": "Show configurations"
			},
			{
				"command": "sws.build",
				"title": "Build"
			},
			{
				"command": "sws.clean",
				"title": "Clean"
			},
			{
				"command": "sws.flash",
				"title": "Flash"
			}
		],
		"keybindings": [
			{
				"command": "sws.showConfig",
				"key": "ctrl+alt+d",
				"args": "config"
			},
			{
				"command": "sws.build",
				"key": "ctrl+alt+b",
				"args": "all"
			},
			{
				"command": "sws.clean",
				"key": "ctrl+alt+c",
				"args": "clean"
			},
			{
				"command": "sws.flash",
				"key": "ctrl+alt+f",
				"args": "flash"
			}
		],
		"breakpoints": [
			{
				"language": "C"
			}
		],
		"debuggers": [
			{
				"type": "sws",
				"label": "Sws Debug",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a elf file.",
								"default": "${workspaceFolder}\\debug\\TESTEUR_IR_PORTE_00_01.elf"
							},
							"atbackendHost": {
								"type": "string",
								"description": "Host where atbackend is running.",
								"default": "127.0.0.1"
							},
							"atbackendPort": {
								"type": "number",
								"description": "websocket port to connect to.",
								"default": 4710
							},
							"tool": {
								"type": "string",
								"description": "Identifier of tool to launch on.",
								"default": "atmelice"
							},
							"device": {
								"type": "string",
								"description": "Name of device.",
								"default": "attiny817"
							},
							"interface": {
								"type": "string",
								"description": "The debug interface used",
								"enum": [
									"UPDI",
									"JTAG",
									"SWD"
								],
								"default": "UPDI"
							},
							"interfaceProperties": {
								"type": "InterfaceType",
								"description": "",
								"default": {
									"UpdiClock": 2000000,
									"KeepTimersRunning": true
								}
							},
							"launchSuspended": {
								"type": "boolean",
								"description": "Suspend after launch.",
								"default": true
							},
							"launchAttached": {
								"type": "boolean",
								"description": "Attach after launch.",
								"default": true
							},
							"cacheFlash": {
								"type": "boolean",
								"description": "Enable flash cache.",
								"default": true
							},
							"eraseRule": {
								"type": "number",
								"description": "Which erase should be done during programming.",
								"default": 0
							},
							"preserveEeprom": {
								"type": "boolean",
								"description": "Preserve EEPROM during launch.",
								"default": false
							},
							"ramSnippetAddress": {
								"type": "string",
								"description": "If applicable, address of ram loader.",
								"default": "0x20000000"
							},
							"progFlashFromRam": {
								"type": "boolean",
								"description": "Should ram loader be used.",
								"default": false
							},
							"useGdb": {
								"type": "boolean",
								"description": "Use GDB as debug engine and evaluator.",
								"default": true
							},
							"gdbLocation": {
								"type": "string",
								"description": "Path to the GDB instance to use.",
								"default": "C:\\toolchains\\avr-gcc_5-4\\bin\\avr-gdb.exe"
							},
							"bootSegment": {
								"type": "number",
								"description": "Which memory segment to boot from.",
								"default": 2
							},
							"packPath": {
								"type": "string",
								"description": "Path to the Device Support Pack for the device.",
								"default": "C:/toolchains/packs/atmel/ATtiny_DFP/1.7.330/Atmel.ATtiny_DFP.pdsc"
							},
							"remapSourcePathFrom": {
								"type": "string",
								"description": "Remap part of source reference path from this path.",
								"default": ""
							},
							"remapSourcePathTo": {
								"type": "string",
								"description": "Remap part of source reference path to this path.",
								"default": ""
							},
							"noDebug": {
								"type": "boolean",
								"description": "Use to see debug trace in atbackend",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "sws",
						"request": "launch",
						"name": "Sws Debug",
						"atbackendHost": "127.0.0.1",
						"atbackendPort": 4710,
						"program": "${workspaceFolder}\\debug\\TESTEUR_IR_PORTE_00_01.elf",
						"tool": "atmelice",
						"device": "attiny817",
						"interface": "UPDI",
						"interfaceProperties": {
							"UpdiClock": 2000000,
							"KeepTimersRunning": true
						},
						"launchSuspended": true,
						"launchAttached": true,
						"cacheFlash": true,
						"eraseRule": 0,
						"preserveEeprom": true,
						"progFlashFromRam": true,
						"ramSnippetAddress": "0x20000000",
						"useGdb": true,
						"gdbLocation": "C:\\toolchains\\avr-gcc_5-4\\bin\\avr-gdb.exe",
						"bootSegment": 2,
						"packPath": "C:/toolchains/packs/atmel/ATtiny_DFP/1.7.330/Atmel.ATtiny_DFP.pdsc",
						"noDebug": true
					}
				],
				"configurationSnippets": [
					{
						"label": "SWS Debug: Launch",
						"description": "A new configuration for 'debugging' a atmel target.",
						"body": {
							"type": "sws",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\debug/TESTEUR_IR_PORTE_00_01.elf\""
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"pack": "vsce package",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^8.0.4",
		"@types/node": "^14.14.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^3.8.3",
		"vscode-debugadapter-testsupport": "^1.42.0",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/ws": "^7.4.0",
		"vscode-debugadapter": "^1.42.1",
		"vscode-debugprotocol": "^1.42.0",
		"ws": "^7.4.0"
	}
}
