{
	"name": "sws",
	"displayName": "sws",
	"description": "AVR Debugger support for VSCode",
	"version": "1.0.0",
	"publisher": "JDE",
	"icon": "images/sws-debug-icon.png",
	"repository": {
		"url": "https://github.com/juliendland/sws"
	},
	"engines": {
		"vscode": "^1.51.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebug",
		"onCommand:sws.showConfig",
		"onCommand:sws.addScript",
		"onCommand:sws.build",
		"onCommand:sws.clean",
		"onCommand:sws.flash",
		"workspaceContains:**/src",
		"workspaceContains:.vscode/sws.json",
		"onLanguage:c"
	],
	"main": "./out/extension.js",
	"contributes": {
		"jsonValidation": [
			{
			  "fileMatch": "sws.json",
			  "url": "./schemas/sws.schema.json"
			}
		],
		"views": {
			"explorer": [
				{
				"id": "swsScripts",
				"name": " SWS Scripts",
				"when": "displaySwsScripts"
				}
			]
		},
		"viewsWelcome": [
			{
			  "view": "swsScripts",
			  "contents": "No sws scripts found.\n[Add Script](command:sws.addScript)"
			}
		],
		"configuration": {
			"title": "SWS",
			"properties": {
				"sws.config.TARGET": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"CURIOSITY",
						"IR_3D",
						"IR_PORTE",
						"TRANSMETTEUR_SECOURS"
					],
					"default": "CURIOSITY",
					"description": "The SWS target's project"
				},
				"sws.config.CORE": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"attiny817",
						"avr128da48",
						"atmega644pa"
					],
					"default": "atmega644pa",
					"description": "The CPU core"
				},
				"sws.config.F_CPU": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "8000000",
					"description": "The frequency on which the CPU runs"
				},
				"sws.config.PACK": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"ATmega_DFP",
						"AVR-Dx_DFP",
						"ATtiny_DFP"
					],
					"default": "ATmega_DFP",
					"description": "The pack to use"
				},
				"sws.config.PACK_VERSION": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "1.6.364",
					"description": "The version of the pack to use"
				},
				"sws.config.INTERFACE": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"JTAG",
						"UPDI",
						"SWD"
					],
					"default": "updi",
					"description": "The interface that de tool uses to flash chip"
				},
				"sws.config.TOOL": {
					"type": "string",
					"scope": "machine-overridable",
					"enum": [
						"atmelice",
						"avrdragon",
						"edbg",
						"nedbg"
					],
					"default": "atmelice",
					"description": "The tool used to flash the chip"
				},
				"sws.atbackend.port": {
					"type": "number",
					"scope": "machine-overridable",
					"default": "4710",
					"description": "The port on which atbackend will communicate"
				},
				"sws.atbackend.internal": {
					"type": "boolean",
					"scope": "machine-overridable",
					"default": "true",
					"description": "Keep true if you don't want to launch atbackend yourself"
				}
			}
		},
		"commands": [
			{
				"command": "sws.showConfig",
				"title": "Show configurations"
			},
			{
				"command": "sws.build",
				"title": "Build"
			},
			{
				"command": "sws.clean",
				"title": "Clean"
			},
			{
				"command": "sws.flash",
				"title": "Flash"
			}
		],
		"keybindings": [
			{
				"command": "sws.showConfig",
				"key": "ctrl+alt+d",
				"args": "config"
			},
			{
				"command": "sws.build",
				"key": "ctrl+alt+b",
				"args": "all"
			},
			{
				"command": "sws.clean",
				"key": "ctrl+alt+c",
				"args": "clean"
			},
			{
				"command": "sws.flash",
				"key": "ctrl+alt+f",
				"args": "flash"
			}
		],
		"breakpoints": [
			{
				"language": "C"
			}
		],
		"debuggers": [
			{
				"type": "sws",
				"label": "C (AVR-GDB)",
				"languages": [
					"c"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"tool",
							"device",
							"interface",
							"gdbLocation",
							"packPath"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a elf file.",
								"default": "${workspaceFolder}\\debug\\TESTEUR_IR_PORTE_00_01.elf"
							},
							"tool": {
								"type": "string",
								"description": "Identifier of tool to launch on.",
								"default": "atmelice"
							},
							"device": {
								"type": "string",
								"description": "Name of device.",
								"default": "attiny817"
							},
							"interface": {
								"type": "string",
								"description": "The debug interface used",
								"enum": [
									"UPDI",
									"JTAG",
									"SWD"
								],
								"default": "UPDI"
							},
							"interfaceClock":{
								"type":"number",
								"description":"The clock frequency used by the debug interface in Hz",
								"default":500000
							},
							"interfaceProperties": {
								"type": "InterfaceType",
								"description": "",
								"default": {
									"JtagProgClock": 500000,
									"JtagDbgClock": 500000,
									"KeepTimersRunning": true
								}
							},
							"launchParameters":{
								"type":"object",
								"properties":{
									"LaunchSuspended": {
										"type": "boolean",
										"description": "Suspend after launch.",
										"default": true
									},
									"LaunchAttached": {
										"type": "boolean",
										"description": "Attach after launch.",
										"default": true
									},
									"CacheFlash": {
										"type": "boolean",
										"description": "Enable flash cache.",
										"default": true
									},
									"EraseRule": {
										"type": "number",
										"description": "Which erase should be done during programming.",
										"default": 0
									},
									"PreserveEeprom": {
										"type": "boolean",
										"description": "Preserve EEPROM during launch.",
										"default": false
									},
									"RamSnippetAddress": {
										"type": "string",
										"description": "If applicable, address of ram loader.",
										"default": "0x20000000"
									},
									"ProgFlashFromRam": {
										"type": "boolean",
										"description": "Should ram loader be used.",
										"default": false
									},
									"UseGdb": {
										"type": "boolean",
										"description": "Use GDB as debug engine and evaluator.",
										"default": true
									},
									"GdbLocation": {
										"type": "string",
										"description": "Path to the AVR-GDB instance.",
										"default": "C:\\toolchains\\avr-gcc_5-4\\bin\\avr-gdb.exe"
									},
									"BootSegment": {
										"type": "number",
										"description": "Which memory segment to boot from.",
										"default": 2
									},
									"PackPath": {
										"type": "string",
										"description": "Path to the Device Support Pack for the device.",
										"default": "C:/toolchains/packs/atmel/ATtiny_DFP/1.7.330/Atmel.ATtiny_DFP.pdsc"
									}
								}
							},
							"remapSourcePathFrom": {
								"type": "string",
								"description": "Remap part of source reference path from this path.",
								"default": ""
							},
							"remapSourcePathTo": {
								"type": "string",
								"description": "Remap part of source reference path to this path.",
								"default": ""
							},
							"noDebug": {
								"type": "boolean",
								"description": "Use to see debug trace in atbackend",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "sws",
						"request": "launch",
						"name": "Sws Debug",
						"program": "${workspaceFolder}\\output\\${config:sws.config.TARGET}\\TESTEUR_${config:sws.config.TARGET}.elf",
						"device": "${config:sws.config.CORE}",
						"tool": "${config:sws.config.TOOL}",
						"interface": "${config:sws.config.INTERFACE}",
						"interfaceClock": 500000,
						"launchParameters":{
							"UseGdb": true,
							"GdbLocation": "C:\\toolchains\\avr-gcc_5-4\\bin\\avr-gdb.exe",
							"PackPath": "C:/toolchains/packs/atmel/${config:sws.config.PACK}/${config:sws.config.PACK_VERSION}/Atmel.${config:sws.config.PACK}.pdsc",
							"LaunchSuspended": true,
							"LaunchAttached": true,
							"CacheFlash": true,
							"EraseRule": 0,
							"PreserveEeprom": true,
							"ProgFlashFromRam": true,
							"RamSnippetAddress": "0x20000000",
							"BootSegment": 2
						},
						"noDebug": true
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vsix": "vsce package",
		"compile": "tsc -p ./",
		"pack": "vsce package",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^8.0.4",
		"@types/node": "^14.14.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^3.9.7",
		"vscode-debugadapter-testsupport": "^1.42.0",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/ws": "^7.4.0",
		"vscode-debugadapter": "^1.42.1",
		"vscode-debugprotocol": "^1.42.0",
		"ws": "^7.4.0"
	}
}
